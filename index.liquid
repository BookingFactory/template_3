<!-- Main pahe header -->
<div class="main-holder" id="motopress-main">
  <div class="offer-wrap only-on-main-page">
    <div class="container">
      <div class="row">
        <div class="span12">
          <div class="offer">
            <div class="row">
              <div class="span12">
                <section class="parallax-box image-parallax-box">
                  <div class="parallax-content">
                    <div class="row">
                      <div class="span8">
                        <p class="logo">
                          <a href="{{ '' | link_to: website_data.link_object}}">
                            {% if website_data.logo_text == nil or website_data.logo_text == '' %}
                              <img src="{{website_data.logo | attachment_url: 'default'}}" />
                            {% else %}
                              {{website_data.logo_text}}
                            {% endif %}
                          </a>
                        </p>
                        <h1>
                          {{website_data.header_text_1}}
                          <br />
                          {{website_data.header_text_2}}
                        </h1>
                        {% if website_data.booking_link == nil or website_data.booking_link.empty> %}
                          <a href="{{ '/book' | link_to: website_data.link_object }}" class="btn btn-default btn-normal btn-inline booking-form-link">
                            <span>
                              {{website_data.booking_button_text}}
                            </span>
                          </a>
                        {% else %}
                          <a href="{{website_data.booking_link}}" class="btn btn-default btn-normal btn-inline booking-form-link">
                            <span>
                              {{website_data.booking_button_text}}
                            </span>
                          </a>
                        {% endif %}
                        {% if website_data.hotel_slug == 'gowergolf' %}
                          <a class="btn btn-default btn-normal btn-inline clean" href="/book-tee-time" target="_self" title="Learn more">
                            <span>
                              Book a Tee Time
                            </span>
                          </a>
                        {% else %}
                          <a class="btn btn-defautl btn-noraml btn-inline clean btn-from-top" href="#welcome" target="_self" title="Learn more">
                            <span>
                              Learn more
                            </span>
                          </a>
                        {% endif %}
                      </div>
                    </div>
                    <div class="clear"></div>
                  </div>
                  <div class="parallax-bg" data-img-url="{{website_data.header_image | attachment_url: 'default' }}" data-invert="false" data-parallax-type="image" data-speed="normal"> </div>
                </section>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Header -->

{% include 'header' %}

<!-- Insiders -->
{% if website_data.membership_active and website_data.membership_placement == 'top' %}
  <div class="insiders" style="background: {{website_data.membership_description_color}}; background: -moz-linear-gradient(left,   {{website_data.membership_description_color}} 0%, {{website_data.membership_description_color}} 50%, {{website_data.membership_from_color}} 50%, {{website_data.membership_from_color}}> 100%); background: -webkit-linear-gradient(left,  {{website_data.membership_description_color}} 0%,{{website_data.membership_description_color}} 50%,{{website_data.membership_from_color}} 50%,{{website_data.membership_from_color}} 100%); background: linear-gradient(to right,  {{website_data.membership_description_color}} 0%,{{website_data.membership_description_color}} 50%,{{website_data.membership_from_color}} 50%,{{website_data.membership_from_color}} 100%); filter: progid:DXImageTransform.Microsoft.gradient( startColorstr='{{website_data.membership_description_color}}', endColorstr='{{website_data.membership_from_color}}',GradientType=1 );">
    <div class="container"></div>
  </div>
{% endif %}


<!--  Content block -->
<div class="content-holder clearfix">
  <div class="container">
    <div class="row">
      <div class="span12">
        <div class="row">
          <div class="span12">
            <div class="slider_off"></div>
          </div>
        </div>
        <div class="row">
          <div class="span12">
            <div class="post-203 page type-page status-publish hentry">
              <div class="row">
                <div class="span12">
                  <div class="spacer">
                    <a name="welcome"></a>
                  </div>
                </div>
                <div class="span2"></div>
                <div class="span8 tofade">
                  {{website_data.text_area}}
                 </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <!-- Rooms  -->
    <div class="row">
      <div class="span12">
        <div class="spacer"></div>
        <div class="page type-page status-publish hentry">
          <div class="title-box clearfix">
            <h2 class="title-box_primary">
              Our Rooms
            </h2>
          </div>
          <ul class="posts-grid row-fluid unstyled services ul-item-0">
            {% for room in website_data.rooms %}
              {% if room.visible == true and room.room_type.photos.size > 0 %}
                <li class="room">
                  <figure class="featured-thumbnaul thumbnail">
                    <a href="{{ room.slug | link_to: website_data.link_object }}">
                      <img src="{{ room.room_type.photos.first.image | attachment_url: 'public' }}" />
                    </a>
                  </figure>
                  <div class="clear"></div>
                  <div class="desc">
                    <h5>
                      <a href="{{ room.slug | link_to: website_data.link_object }}">
                        {{room.name}}
                      </a>
                    </h5>
                    <p class="excerpt">
                      {{room.introduction}}
                    </p>
                  </div>
                </li>
              {% endif %}
            {% endfor %}
            {% for room in website_data.custom_rooms %}
              {% if room.visible == true and  room.website_custom_room_photos.size > 0 %}
                <li class="room">
                  <figure class="featured-thumbnail thumbnail">
                    <a href="{{ room.slug | link_to: website_data.link_object }}">
                      <img src="{{ room.website_custom_room_photos.first.image | attachment_url: 'public' }}"/>
                    </a>
                  </figure>
                  <div class="clear"></div>
                  <div class="desc">
                    <h5>
                      <a href="{{ room.slug | link_to: website_data.link_object }}">
                        {{room.title}}
                      </a>
                    </h5>
                    <p class="excerpt">
                      {{room.introduction}}
                    </p>
                  </div>
                </li>
              {% endif %}
            {% endfor %}
          </ul>
          <div class="clear"></div>
        </div>
      </div>
    </div>
  </div>
</div>


<!-- Inseders -->
{% if website_data.membership_active and website_data.membership_placement == 'middle' %}
  <div class="insiders" style="background: {{website_data.membership_description_color}}; background: -moz-linear-gradient(left,   {{website_data.membership_description_color}} 0%, {{website_data.membership_description_color}} 50%, {{website_data.membership_from_color}} 50%, {{website_data.membership_from_color}}> 100%); background: -webkit-linear-gradient(left,  {{website_data.membership_description_color}} 0%,{{website_data.membership_description_color}} 50%,{{website_data.membership_from_color}} 50%,{{website_data.membership_from_color}} 100%); background: linear-gradient(to right,  {{website_data.membership_description_color}} 0%,{{website_data.membership_description_color}} 50%,{{website_data.membership_from_color}} 50%,{{website_data.membership_from_color}} 100%); filter: progid:DXImageTransform.Microsoft.gradient( startColorstr='{{website_data.membership_description_color}}', endColorstr='{{website_data.membership_from_color}}',GradientType=1 );">
